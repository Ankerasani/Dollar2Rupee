{
  "version": 2,
  "name": "dollar2rupee-api",
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/rates",
      "dest": "/api/rates.js"
    },
    {
      "src": "/api/forex",
      "dest": "/api/forex.js"
    },
    {
      "src": "/api/monitor-margins",
      "dest": "/api/monitor-margins.js"
    }
  ],
  "crons": [
    {
      "path": "/api/monitor-margins",
      "schedule": "0 0 * * *"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}


